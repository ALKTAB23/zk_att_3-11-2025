<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Leave Deduction Report Form View -->
        <record id="view_hr_leave_deduction_report_form" model="ir.ui.view">
            <field name="name">hr.leave.deduction.report.form</field>
            <field name="model">hr.leave.deduction.report</field>
            <field name="arch" type="xml">
                <form string="Annual Leave Deduction Report">
                    <header>
                        <button name="action_generate_report" string="ðŸ“Š Generate Report" type="object" class="oe_highlight"/>
                        <button name="action_print_report" string="ðŸ–¨ Print Report" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" required="1"/>
                                <field name="date_from" required="1"/>
                                <field name="date_to" required="1"/>
                            </group>
                        </group>
                        
                        <group string="ðŸ“‹ Leave Balance Summary">
                            <group>
                                <field name="annual_leave_days" readonly="1" style="font-weight: bold;"/>
                                <field name="leave_taken_days" readonly="1"/>
                            </group>
                            <group>
                                <field name="total_deduction_days" readonly="1" style="color: red; font-weight: bold;"/>
                                <field name="remaining_leave_days" readonly="1" style="color: green; font-weight: bold;"/>
                            </group>
                        </group>
                        
                        <group string="âŒ Deductions Breakdown">
                            <group string="â° Late Check-In">
                                <field name="late_deduction_hours" readonly="1"/>
                                <field name="late_deduction_days" readonly="1" style="color: red;"/>
                            </group>
                            <group string="ðŸšª Early Checkout">
                                <field name="diff_deduction_hours" readonly="1"/>
                                <field name="diff_deduction_days" readonly="1" style="color: red;"/>
                            </group>
                            <group string="ðŸš« Absence">
                                <field name="absence_deduction_hours" readonly="1"/>
                                <field name="absence_deduction_days" readonly="1" style="color: red;"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="ðŸ“… Monthly Details">
                                <field name="line_ids" readonly="1">
                                    <tree>
                                        <field name="date_from"/>
                                        <field name="date_to"/>
                                        <field name="late_hours" sum="total_late_hours"/>
                                        <field name="late_days" sum="total_late_days" style="color: red;"/>
                                        <field name="diff_hours" sum="total_diff_hours"/>
                                        <field name="diff_days" sum="total_diff_days" style="color: red;"/>
                                        <field name="absence_hours" sum="total_absence_hours"/>
                                        <field name="absence_days" sum="total_absence_days" style="color: red;"/>
                                        <field name="total_deduction_days" sum="grand_total" style="font-weight: bold; color: red;"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Leave Deduction Report Tree View -->
        <record id="view_hr_leave_deduction_report_tree" model="ir.ui.view">
            <field name="name">hr.leave.deduction.report.tree</field>
            <field name="model">hr.leave.deduction.report</field>
            <field name="arch" type="xml">
                <tree string="Leave Deduction Reports">
                    <field name="employee_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="annual_leave_days"/>
                    <field name="total_deduction_days"/>
                    <field name="remaining_leave_days"/>
                </tree>
            </field>
        </record>

        <!-- Leave Deduction Report Action -->
        <record id="action_hr_leave_deduction_report" model="ir.actions.act_window">
            <field name="name">ðŸ“Š Annual Leave Deduction Report</field>
            <field name="res_model">hr.leave.deduction.report</field>
            <field name="view_mode">form,tree</field>
            <field name="target">new</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Generate Annual Leave Deduction Report
                </p>
                <p>
                    This report shows deductions from annual leave due to:
                    <ul>
                        <li>Late check-in</li>
                        <li>Early checkout</li>
                        <li>Absence</li>
                    </ul>
                </p>
            </field>
        </record>

        <!-- Add Menu Item under Reporting -->
        <menuitem id="menu_hr_leave_deduction_report"
                  name="Leave Deduction Report"
                  parent="hr_attendance_sheet.menu_hr_att_sheet_reports"
                  action="action_hr_leave_deduction_report"
                  sequence="20"/>

    </data>
</odoo>
